@model PagedList.IPagedList<ShopBanDoGiaDung.Models.Danhmucsanpham>
@{
    ViewBag.Title = "QuanLyDM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}



<div >

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">


                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Quản lý thông tin danh mục</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã danh mục</th>
                                            <th>Tên danh mục</th>                                   
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.MaDanhMuc</td>
                                                <td>@item.TenDanhMuc</td>
                                                <td>
                                                    <a href="@Url.Action("SuaDM","Admin",new {id=item.MaDanhMuc})" class="btn btn-success">Edit</a>
                                                </td>
                                                <td><a class="btn btn-success" onclick="XoaDanhMuc(@item.MaDanhMuc)">Delete</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Mã danh mục</th>
                                            <th>Tên danh mục</th> 
                                        </tr>
                                    </tfoot>
                                </table>
                                <div class="row">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                            Showing @ViewBag.PageStartItem to @ViewBag.PageEndItem of @Model.TotalItemCount entries
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul class="pagination">
                                                @if (Model.HasPreviousPage)
                                                {
                                                    <li class="paginate_button page-item" id="example1_previous">
                                                        <a href="@Url.Action("QuanLyDM", new { page = 1 })" aria-controls="example1" data-dt-idx="0" tabindex="0" class="page-link">First</a>
                                                    </li>
                                                }
                                                @for (int i = 1; i <= Model.PageCount; i++)
                                                {
                                                    <li class="paginate_button page-item @(i == ViewBag.Page ? "active" : "")">
                                                        <a href="@Url.Action("QuanLyDM", new { page = i })" aria-controls="example1" data-dt-idx="@i" tabindex="0" class="page-link">@i</a>
                                                    </li>
                                                }
                                                @if (Model.HasNextPage)
                                                {
                                                    <li class="paginate_button page-item" id="example1_next">
                                                        <a href="@Url.Action("QuanLyDM", new { page = Model.PageCount })" aria-controls="example1" data-dt-idx="2" tabindex="0" class="page-link">Last</a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button class="btn btn-primary" data-dismiss="modal" id="confirmThem" onclick="Them()">Thêm danh mục mới</button>
                                @*<a href="#" class="btn btn-secondary" style="display: none;"><i class="material-icons">&#xE24D;</i> <span>Xuất Excel</span></a>*@
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
        <form id="frmThemDM" method="post" aria-hidden="true" tabindex="-1" role="dialog" style="display: none;" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputPassword1">Nhập tên danh mục</label>
                    <input type="text" class="form-control" id="tendm" placeholder="Nhập tên danh mục mới tại đây">
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="confirm">Thêm danh mục</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Hủy bỏ</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        function Them() {
            var form = document.getElementById("frmThemDM");
            form.setAttribute("aria-hidden", "false");
            form.setAttribute("tabindex", "0");
            form.style.display = "block";
            $('#confirm').on('click', function () {
                var tendm = $('#tendm').val().toString();
                if (tendm.trim() === "") {
                    // Kiểm tra nếu trường TenDM rỗng
                    alert("Bạn chưa nhập tên danh mục.");
                } else {
                    // Nếu trường TenDM không rỗng, tiến hành gửi yêu cầu AJAX
                    $.ajax({
                        url: '/Admin/ThemDM', // Điều chỉnh URL nếu cần thiết
                        data: {
                            tendm: tendm
                        },
                        type: 'POST',
                        dataType: 'json',
                        success: function (res) {
                            if (res.status == true) {
                                // Đóng modal sau khi thêm thành công
                                form.setAttribute("aria-hidden", "true");
                                form.setAttribute("tabindex", "-1");
                                form.style.display = "none";
                                window.location = '@Url.Action("QuanLyDM","Admin")';
                            }
                        }
                    });
                }
            });
            $('#cancel').on('click', function () {
                form.setAttribute("aria-hidden", "true");
                form.setAttribute("tabindex", "-1");
                form.style.display = "none";
            });
        }
    </script>


    <!-- Đoạn mã HTML cho modal xác nhận xóa -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa danh mục?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
    <script>
        function XoaDanhMuc(madm) {
            var mahang = parseInt(madm);

            // Hiển thị modal xác nhận xóa
            $('#confirmDeleteModal').modal('show');

            // Xử lý sự kiện khi người dùng xác nhận xóa
            $('#confirmDeleteButton').on('click', function () {
                $.ajax({
                    url: '/Admin/XoaDM',
                    data: {
                        madm: madm
                    },
                    type: 'POST',
                    dataType: 'json',
                    success: function (res) {
                        if (res.status == true) {
                            // Đóng modal sau khi xóa thành công
                            $('#confirmDeleteModal').modal('hide');
                            window.location = '@Url.Action("QuanLyDM","Admin")';
                        }
                    }
                });
            });
        }
    </script>


    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>

<script src="~/Admin/dist/js/adminlte.min.js"></script>




