@model PagedList.IPagedList<ShopBanDoGiaDung.Models.Sanpham>
@{
    ViewBag.Title = "timKiemSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Quản lý sản phẩm </h3>
                            @using (Html.BeginForm("timKiemSanPham", "Admin"))
                            {
                                <div class="input-group input-group-sm">
                                    <input class="form-control form-control-navbar" type="search" placeholder="Search" value="@ViewBag.SearchTerm" aria-label="Search" id="tenSP" name="tenSP" autocomplete="off" required>
                                    <div class="input-group-append">
                                        <button class="btn btn-navbar" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Giá bán</th>
                                        <th>Số lượng đã bán</th>
                                        <th>Số lượng còn lại</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MaSp</td>
                                            <td>@item.TenSp</td>
                                            <td><img class="img-responsive" style=" max-width: 50%;" src="~/Admin/images/@item.Anh1" /></td>
                                            <td>@item.GiaTien.Value.ToString("N0")</td>
                                            <td>@item.SoLuongDaBan</td>
                                            <td>@item.SoLuongTrongKho</td>
                                            <td>
                                                <a href="@Url.Action("SuaSP","Admin",new { ma = item.MaSp})" class="btn btn-success">Edit</a>

                                            </td>
                                            <td><a class="btn btn-success" title="Delete" data-toggle="modal" onclick="XoaSP(@item.MaSp)">Delete</a></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Giá bán</th>
                                        <th>Số lượng đã bán</th>
                                        <th>Số lượng còn lại</th>

                                    </tr>
                                </tfoot>
                            </table>
                            <!-- Hiển thị thanh phân trang -->
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                        Showing @ViewBag.PageStartItem to @ViewBag.PageEndItem of @ViewBag.TotalItemCount entries
                                    </div>

                                </div>
                                <div class="col-sm-12 col-md-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                        <ul class="pagination">
                                            @if (Model.HasPreviousPage)
                                            {
                                                <li class="paginate_button page-item" id="example1_previous">
                                                    <a href="@Url.Action("timKiemSanPham", new { page = 1, tenSP=@ViewBag.SearchTerm })" aria-controls="example1" data-dt-idx="0" tabindex="0" class="page-link">First</a>
                                                </li>
                                            }
                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                <li class="paginate_button page-item @(i == ViewBag.Page ? "active" : "")">
                                                    <a href="@Url.Action("timKiemSanPham", new { page = i, tenSP=@ViewBag.SearchTerm })" aria-controls="example1" data-dt-idx="@i" tabindex="0" class="page-link">@i</a>
                                                </li>
                                            }
                                            @if (Model.HasNextPage)
                                            {
                                                <li class="paginate_button page-item" id="example1_next">
                                                    <a href="@Url.Action("timKiemSanPham", new { page = Model.PageCount, tenSP=@ViewBag.SearchTerm })" aria-controls="example1" data-dt-idx="2" tabindex="0" class="page-link">Last</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>                       
                           
                        </div>
                        <a type="button" class="btn btn-primary" href=" @Url.Action("ThemSP","Admin")" data-dismiss="modal" id="confirmThem">Thêm sản phẩm mới</a>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- Đoạn mã HTML cho modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa sản phẩm?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
<script>
    function XoaSP(ma) {
        var masp = parseInt(ma);

        // Hiển thị modal xác nhận xóa
        $('#confirmDeleteModal').modal('show');

        // Xử lý sự kiện khi người dùng xác nhận xóa
        $('#confirmDeleteButton').on('click', function () {
            $.ajax({
                url: '/Admin/XoaSP',
                data: {
                    masp: masp
                },
                type: 'POST',
                dataType: 'json',
                success: function (res) {
                    if (res.status == true) {
                        // Đóng modal sau khi xóa thành công
                        $('#confirmDeleteModal').modal('hide');
                        window.location = '@Url.Action("QuanLySP","Admin")';
                    }
                }
            });
        });
    }
</script>
<script>
    // Lấy giá trị input khi trang được tải
    var searchInput = document.getElementById('tenSP');
    var savedSearchValue = localStorage.getItem('searchValue');
    if (savedSearchValue) {
        searchInput.value = savedSearchValue;
    }

    // Lưu giá trị input mỗi khi nó thay đổi
    searchInput.addEventListener('input', function () {
        localStorage.setItem('searchValue', searchInput.value);
    });

    // Xóa giá trị lưu trữ khi người dùng nhấn nút "Clear" hoặc muốn bắt đầu một tìm kiếm mới
    var clearButton = document.getElementById('clearSearch');
    clearButton.addEventListener('click', function () {
        localStorage.removeItem('searchValue');
    });
</script>


