<!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->

<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script>
    function XoaSP(ma) {
        var masp = parseInt(ma);

        // Hiển thị modal xác nhận xóa
        $('#confirmDeleteModal').modal('show');

        // Xử lý sự kiện khi người dùng xác nhận xóa
        $('#confirmDeleteButton').on('click', function () {
            $.ajax({
                url: '/Admin/XoaSP',
                data: {
                    masp: masp
                },
                type: 'POST',
                dataType: 'json',
                success: function (res) {
                    if (res.status == true) {
                        // Đóng modal sau khi xóa thành công
                        $('#confirmDeleteModal').modal('hide');
                        window.location = '@Url.Action("QuanLySP","Admin")';
                    }
                }
            });
        });
    }
    function Them() {
        var form = document.getElementById("frmThemHang");
        form.setAttribute("aria-hidden", "false");
        form.setAttribute("tabindex", "0");
        form.style.display = "block";

        $('#cancel').on('click', function () {
            form.setAttribute("aria-hidden", "true");
            form.setAttribute("tabindex", "-1");
            form.style.display = "none";
        });
    }

    $(document).ready(function () {
        const minPriceInput = $("#min-price");
        const maxPriceInput = $("#max-price");
        const orderPriceSelect = $("#select-order-price");
        const priceRange = $("#price-range");

        // Initialize the price range slider
        priceRange.slider({
            range: true,
            min: 0,
            max: 100000000,
            values: [@min_price, @max_price],
            slide: function (event, ui) {
                minPriceInput.val(ui.values[0].toLocaleString('en-US'));
                maxPriceInput.val(ui.values[1].toLocaleString('en-US'));
            }
        });

        // Filter button click event
        $("#filterButton").click(function () {
            // Lấy các giá trị từ các phần tử trên trang
            const maxPriceInput = $("#max-price");
            const minPriceInput = $("#min-price");
            const orderPriceSelect = $("#select-order-price");
            const Hang = $("#Hang").val(); // Lấy giá trị từ dropdown hãng
            const DanhMuc = $("#DanhMuc").val(); // Lấy giá trị từ dropdown danh mục

            // Chuyển đổi giá trị dạng chuỗi sang số nguyên
            const maxPrice = parseInt(maxPriceInput.val().replace(/,/g, ''));
            const minPrice = parseInt(minPriceInput.val().replace(/,/g, ''));
            const orderPrice = orderPriceSelect.val();
            const ten = $("input[name='tenSP']").val();
            const slc = $("input[name='slc']").val();
            const ban = $("input[name='ban']").val();

            // Xây dựng URL và điều hướng tới nó
            const sortOrderParam = orderPrice !== 'notorder' ? `&sortOrder=${orderPrice}` : '';
            const tendm = DanhMuc !== 0 ? `&tendm=${DanhMuc}` : '';
            const tenh = Hang !== 0 ? `&tenh=${Hang}` : '';

            // Sử dụng `window.location.href` để chuyển hướng đến URL
            const url = `@Url.Action("QuanLySP", "Admin")?tenSP=${ten}&tendm=${DanhMuc}&slc=${slc}&ban=${ban}&tenh=${Hang}&maxPrice=${maxPrice}&minPrice=${minPrice}${sortOrderParam}`;
            window.location.href = url;
        });

    });
</script>





