
@{
     ViewBag.Title = "QuanLySP";
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
     var dstk = (List<ShopBanDoGiaDung.Models.Sanpham>)ViewBag.ds;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">


                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Quản lý sản phẩm  <a type="button" class="btn btn-primary" href=" @Url.Action("ThemSP","Admin")" data-dismiss="modal" id="confirmThem">Thêm hãng mới</a></h3>
                            
                        </div>
                        
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Giá bán</th>
                                        <th>Số lượng đã bán</th>
                                        <th>Số lượng còn lại</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in dstk)
                                    {
                                        <tr>
                                            <td>@item.MaSp</td>
                                            <td>@item.TenSp</td>
                                            <td><img class="img-responsive" style=" max-width: 30%;" src="~/Admin/images/@item.Anh1" /></td>
                                            <td>@item.?GiaTien.Value.ToString("N0")</td>
                                            <td>@item.SoLuongDaBan</td>
                                            <td>@item.SoLuongTrongKho</td>
                                            <td>
                                                <a href="@Url.Action("SuaSP","Admin",new { ma = item.MaSp})" class="btn btn-app" style="background-size:1px" ><i class="fas fa-edit"></i>Edit</a>
                                                <a href="#" class="btn btn-app" title="Delete" data-toggle="modal" onclick="XoaSP(@item.MaSp)"><i class="material-icons"></i>Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Giá bán</th>
                                        <th>Số lượng đã bán</th>
                                        <th>Số lượng còn lại</th>
                                        <th>Hành động</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- Đoạn mã HTML cho modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa sản phẩm?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
<script>
    function XoaSP(ma) {
        var masp = parseInt(ma);

        // Hiển thị modal xác nhận xóa
        $('#confirmDeleteModal').modal('show');

        // Xử lý sự kiện khi người dùng xác nhận xóa
        $('#confirmDeleteButton').on('click', function () {
            $.ajax({
                url: '/Admin/XoaSP',
                data: {
                    masp: masp
                },
                type: 'POST',
                dataType: 'json',
                success: function (res) {
                    if (res.status == true) {
                        // Đóng modal sau khi xóa thành công
                        $('#confirmDeleteModal').modal('hide');
                        window.location = '@Url.Action("QuanLySP","Admin")';
                    }
                }
            });
        });
    }
</script>


