@model X.PagedList.IPagedList<ShopBanDoGiaDung.Models.SanPhamct>
@using System.Text.Json
@using ShopBanDoGiaDung.authorize
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "QuanLySP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var max_price = ViewBag.MaxPrice;
    var min_price = ViewBag.MinPrice;
    var order_price = ViewBag.SortOrder;
    var ten = ViewBag.tenSP;
    var dsdm = ViewBag.dsdm;
    var dsh = ViewBag.dsh;
    var tenh = ViewBag.tenh;
    var ban = ViewBag.ban;
    var slc = ViewBag.slc;
    var tendm = ViewBag.tendm;
    var chucvu = (List<ShopBanDoGiaDung.Models.ChucVu>)ViewBag.chucvu;
    List<AccountRole> data = HttpContextAccessor.HttpContext.Session.GetJson<List<AccountRole>>("QuyenTK") ?? new List<AccountRole>();
    var qh = data.FirstOrDefault(c => c.ActionName == "QuanLySP");

}
@if (qh.MaA == 1)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Full Screen Alert</title>
        <style>
            body {
                margin: 0;
                font-family: Arial, sans-serif;
            }

            .fullscreen-alert {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                align-items: center;
                justify-content: center;
                color: #fff;
                text-align: center;
                z-index: 1000;
            }

            .alert-content {
                background-color: #343a40;
                padding: 20px;
                border-radius: 8px;
            }

            .close-btn {
                cursor: pointer;
                color: #fff;
                font-size: 20px;
                position: absolute;
                top: 10px;
                right: 10px;
            }
        </style>
    </head>
    <body>

        <div class="fullscreen-alert" id="fullscreenAlert">
            <div class="alert-content">
                <span class="close-btn" onclick="closeFullscreenAlert()">&times;</span>
                <h1>Truy cập thất bại</h1>
                <p>Bạn không có quyền truy cập trang này. Vui lòng liên hệ với chúng tôi để nhận hỗ trợ </p>
            </div>
        </div>

        <script>
            function showFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'flex';
            }

            function closeFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'none';
            }

            // Gọi hàm này khi trang web được tải
            document.addEventListener('DOMContentLoaded', function () {
                showFullscreenAlert();
            });
        </script>

    </body>
    </html>


}
else { }
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Quản lý sản phẩm</h3>
                        </div>
                        <div style=" margin-top: 30px; margin-bottom: 30px;">
                            <div style=" margin-left: 40px;">
                                @using (Html.BeginForm("QuanLySP", "Admin"))
                                {
                                    <label for="min-price" style="font-size: 20px; margin-right: 10px">Tìm kiếm theo tên sản phẩm:</label>
                                    <div style=" align-items: center; margin-right: 10px">

                                        <div class="input-group input-group-sm" style="flex: 1; margin-top: 2px; width: 50%;">
                                            <input class="form-control form-control-navbar" type="search" placeholder="Search" value="@ten" aria-label="Search" name="tenSP" autocomplete="off" required>
                                            <div class="input-group-append">
                                                <button class="btn btn-navbar" type="submit">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <button class="btn btn-primary" data-dismiss="modal" id="confirmThem" style="margin-top:30px" onclick="Them()">Tìm kiếm nâng cao</button>

                                <form id="frmThemHang" aria-hidden="true" tabindex="-1" style="display: none;">
                                    <div class="card-body">
                                        <div class="slider" style="width: 23%; height: 10px; margin-top:30px;margin-bottom:20px">
                                            <label for="min-price" style="font-size: 18px;">Chọn khoảng giá phù hợp:</label>
                                            <div id="price-range"></div>
                                            <div></div>
                                            <div id="price-values">
                                                <input id="min-price" type="text" disabled value="@min_price.ToString("N0")" style="width: 130px;">
                                                <input id="max-price" type="text" disabled value="@(max_price != 0 ? max_price.ToString("N0") : "100,000,000")" style="width: 130px;">
                                            </div>
                                        </div>
                                        <div class="phai" style=" margin-top:30px;margin-bottom:20px; margin-top:90px;  ">
                                            <label for="select-order-price" style="font-size: 18px;">Chọn sắp xếp giá:</label>
                                            <select id="select-order-price">
                                                <option value="notorder">Sắp xếp tăng/giảm của giá</option>
                                                <option value="tang">Giá tăng dần</option>
                                                <option value="giam">Giá giảm dần</option>
                                            </select>

                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="Hang">Hãng:</label>
                                                    <select class="form-control" id="Hang">
                                                        <option value=0>Chọn hãng</option>
                                                        @foreach (var item in dsh)
                                                        {
                                                            <option value="@item.MaHang">@item.TenHang</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="slc">Sản phẩm còn trong kho dưới:</label>
                                                    <input type="number" value="@(slc!=0?slc:null)" class="form-control" placeholder="Nhập số lượng sản phẩm" name="slc" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="DanhMuc">Danh mục:</label>
                                                    <select class="form-control" id="DanhMuc">
                                                        <option value=0>Chọn danh mục</option>
                                                        @foreach (var item in dsdm)
                                                        {
                                                            <option value="@item.MaDanhMuc">@item.TenDanhMuc</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="ban">Sản phẩm đã bán trên:</label>
                                                    <input type="number" value="@(ban!=0? ban:null)" class="form-control" placeholder="Nhập số lượng sản phẩm" name="ban" required>
                                                </div>
                                            </div>
                                        </div>


                                        <button type="button" class="btn btn-primary" id="filterButton">Tìm kiếm</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Hủy bỏ</button>

                                    </div>
                                </form>


                            </div>

                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>

                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Hãng sản xuất</th>
                                        <th>Danh mục sản phẩm</th>
                                        <th>Giá bán</th>
                                        <th>Số lượng đã bán</th>
                                        <th>Số lượng còn lại</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td><a href="@Url.Action("ProductDetail", "Home", new { id = item.MaSp })">@item.TenSp</a></td>
                                            <td><img class="img-responsive" style="max-width: 50%;" src="~/Admin/images/@item.Anh1" /></td>
                                            <td>@item.Hang</td>
                                            <td>@item.DanhMuc</td>
                                            <td>@item.GiaTien?.ToString("N0")</td>
                                            <td>@item.SoLuongDaBan</td>
                                            <td>@item.SoLuongTrongKho</td>
                                            @if (qh.MaA != 2)
                                            {
                                                <td>
                                                    <a href="@Url.Action("SuaSP", "Admin", new { ma = item.MaSp })" class="btn btn-success">Edit</a>
                                                </td>
                                                <td>
                                                    <a class="btn btn-success" title="Delete" data-toggle="modal" onclick="XoaSP(@item.MaSp)">Delete</a>
                                                </td>
                                            }
                                           
                                        </tr>
                                    }
                                </tbody>

                            </table>
                            <!-- Hiển thị thanh phân trang -->
                            <div class="row">
                                <div class="col-sm-12 col-md-5">
                                    <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                        Danh sách từ @ViewBag.PageStartItem đến @ViewBag.PageEndItem trên tổng số @ViewBag.TotalItemCount sản phẩm
                                    </div>
                                </div>
                                <ul class="pagination">

                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="page-item ">
                                            <a class="page-link" href="@Url.Action("QuanLySP", new {tenSP=ten, tenh=tenh,tendm=tendm,slc=slc, ban=ban,minPrice=min_price,maxPrice=max_price, sortOrder=order_price, page = Model.PageNumber - 1 })">Previous</a>
                                        </li>

                                    }
                                    <li class="page-item @(1 == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("QuanLySP", new {tenSP=ten, tenh=tenh,tendm=tendm,slc=slc, ban=ban,minPrice=min_price,maxPrice=max_price, sortOrder=order_price, page = 1 })">1</a>
                                    </li>
                                    @if (Model.PageNumber > 3)
                                    {
                                        <li class="page-item">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    @for (int i = Model.PageNumber - 1; i <= Model.PageNumber + 1; i++)
                                    {
                                        if (i > 1 && i < Model.PageCount)
                                        {
                                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("QuanLySP", new {tenSP=ten, tenh=tenh,tendm=tendm,slc=slc, ban=ban,minPrice=min_price,maxPrice=max_price, sortOrder=order_price, page = i })">@i</a>
                                            </li>
                                        }
                                    }
                                    @if (Model.PageNumber < Model.PageCount - 1)
                                    {
                                        <li class="page-item">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    @if (Model.PageCount > 1)
                                    {
                                        <li class="page-item @(Model.PageCount == Model.PageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("QuanLySP", new {tenSP=ten, tenh=tenh,tendm=tendm,slc=slc, ban=ban,minPrice=min_price,maxPrice=max_price, sortOrder=order_price, page = Model.PageCount })">@Model.PageCount</a>
                                        </li>
                                    }

                                    @if (Model.HasNextPage)
                                    {

                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("QuanLySP", new { tenSP=ten, tenh=tenh,tendm=tendm,slc=slc, ban=ban,minPrice=min_price,maxPrice=max_price, sortOrder=order_price,page = Model.PageNumber + 1 })">Next</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <form method="post" action="@Url.Action("ThemSP", "Admin")">
                            <button type="submit" class="btn btn-success" @if (qh.MaA == 2)
                            {
                                <text>style="display: none;"</text>
                            }>Thêm sản phẩm mới</button>
                        </form>

                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

