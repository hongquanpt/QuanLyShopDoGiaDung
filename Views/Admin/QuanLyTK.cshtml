@model X.PagedList.IPagedList<ShopBanDoGiaDung.Models.TaiKhoanChucVu>
@using System.Text.Json
@using ShopBanDoGiaDung.authorize
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var chucvu = (List<ShopBanDoGiaDung.Models.ChucVu>)ViewBag.chucvu;
    List<AccountRole> data = HttpContextAccessor.HttpContext.Session.GetJson<List<AccountRole>>("QuyenTK") ?? new List<AccountRole>();
    var qh = data.FirstOrDefault(c => c.ActionName == "QuanLyTK");
    var tenctk = ViewBag.tenctk;
    var tendc= ViewBag.tendc;
    var sdt= ViewBag.sdt;
    var email= ViewBag.email;
    var chvu= ViewBag.chvu;
    var matk = ViewBag.matk;
}
@if (qh.MaA == 1)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Full Screen Alert</title>
        <style>
            body {
                margin: 0;
                font-family: Arial, sans-serif;
            }

            .fullscreen-alert {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                align-items: center;
                justify-content: center;
                color: #fff;
                text-align: center;
                z-index: 1000;
            }

            .alert-content {
                background-color: #343a40;
                padding: 20px;
                border-radius: 8px;
            }

            .close-btn {
                cursor: pointer;
                color: #fff;
                font-size: 20px;
                position: absolute;
                top: 10px;
                right: 10px;
            }
        </style>
    </head>
    <body>

        <div class="fullscreen-alert" id="fullscreenAlert">
            <div class="alert-content">
                <span class="close-btn" onclick="closeFullscreenAlert()">&times;</span>
                <h1>Truy cập thất bại</h1>
                <p>Bạn không có quyền truy cập trang này. Vui lòng liên hệ với chúng tôi để nhận hỗ trợ </p>
            </div>
        </div>

        <script>
            function showFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'flex';
            }

            function closeFullscreenAlert() {
                document.getElementById('fullscreenAlert').style.display = 'none';
            }

            // Gọi hàm này khi trang web được tải
            document.addEventListener('DOMContentLoaded', function () {
                showFullscreenAlert();
            });
        </script>

    </body>
    </html>


}
else
{
    <div class="wrapper">

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">


                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Quản lý tài khoản khách hàng</h3>
                                </div>
                                <div style=" margin-top: 30px; margin-bottom: 30px;">
                                    <div style=" margin-left: 40px;">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="tendm">Tìm kiếm theo tên chủ tài khoản:    </label>
                                                        <input  type="text" value="@tenctk" class="form-control" placeholder="Nhập tên chủ tài khoản " name="tenctk" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="madm">Tìm kiếm theo mã tài khoản:    </label>
                                                        <input  type="number" value="@(matk!=0?matk:null)" class="form-control" placeholder="Nhập mã mã tài khoản " name="matk" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ChucVu">Chức vụ:</label>
                                                        <select class="form-control" id="ChucVu">
                                                            <option value=0>Chọn chức vụ</option>
                                                            @foreach (var item in chucvu)
                                                            {
                                                                <option value="@item.MaCv">@item.Ten</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="tendm">Tìm kiếm theo địa chỉ:    </label>
                                                        <input  type="text" value="@tendc" class="form-control" placeholder="Nhập địa chỉ " name="tendc" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="madm">Tìm kiếm theo số điện thoại:    </label>
                                                        <input  type="text" value="@sdt" class="form-control" placeholder="Nhập số điện thoại " name="sdt" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="tendm">Tìm kiếm theo email:    </label>
                                                        <input type="text" value="" class="form-control" placeholder="Nhập địa chỉ email " name="email" required>
                                                    </div>
                                                </div>
                                               
                                            </div>

                                            <button style="margin-top:20px;margin-left:85%" type="button" class="btn btn-primary" id="filterButton">Tìm kiếm</button>
                                        </div>
                                    </div>

                                </div>
                              
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã TK</th>
                                                <th>Họ tên</th>
                                                <th>Ngày sinh</th>
                                                <th>Địa chỉ</th>
                                                <th>Số điện thoại</th>
                                                <th>Email</th>
                                                <th>Chức vụ</th>
                                                @if (qh.MaA != 2)
                                                {
                                                    <th>Xóa</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.MaTaiKhoan</td>
                                                    <td>@item.Ten</td>
                                                    <td>@item.NgaySinh</td>
                                                    <td>@item.DiaChi</td>
                                                    <td>@item.Sdt</td>
                                                    <td>@item.Email</td>
                                                    <td>
                                                        <select name="ChucVu" class="form-control" @(qh.MaA == 2 ? "disabled" : "")>
                                                            <option value="@item.MaCV" selected>@item.TenChucVu</option>
                                                            @foreach (var chucVu in chucvu)
                                                            {
                                                                <option value="@chucVu.MaCv">@chucVu.Ten</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    @if (qh.MaA != 2)
                                                    {
                                                        <td>
                                                            <a class="btn btn-success" onclick="XoaTK(@item.MaTaiKhoan)" data-id="@item.MaTaiKhoan">Xóa</a>
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                    <div class="row">
                                        <div class="col-sm-12 col-md-5">
                                            <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">
                                                Danh sách từ @ViewBag.PageStartItem đến @ViewBag.PageEndItem trên tổng số @ViewBag.TotalItemCount tài khoản
                                            </div>
                                        </div>
                                        <ul class="pagination">

                                            @if (Model.HasPreviousPage)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("QuanLyTK", new { page = Model.PageNumber - 1 })">Previous</a>
                                                </li>

                                            }
                                            <li class="page-item  @(1 == Model.PageNumber ? "active" : "")">
                                                <a class="page-link" href="@Url.Action("QuanLyTK", new { page = 1 })">1</a>
                                            </li>
                                            @if (Model.PageNumber > 3)
                                            {
                                                <li class="page-item">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            @for (int i = Model.PageNumber - 1; i <= Model.PageNumber + 1; i++)
                                            {
                                                if (i > 1 && i < Model.PageCount)
                                                {
                                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                                        <a class="page-link" href="@Url.Action("QuanLyTK", new { page = i })">@i</a>
                                                    </li>
                                                }
                                            }
                                            @if (Model.PageNumber < Model.PageCount - 1)
                                            {
                                                <li class="page-item">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            @if (Model.PageCount > 1)
                                            {
                                                <li class="page-item  @(Model.PageCount == Model.PageNumber ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("QuanLyTK", new { page = Model.PageCount })">@Model.PageCount</a>
                                                </li>
                                            }
                                            @if (Model.HasNextPage)
                                            {

                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("QuanLyTK", new { page = Model.PageNumber + 1 })">Next</a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card-header -->
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
        </div>
    </div>
    <!-- Đoạn mã HTML cho modal xác nhận xóa -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Bạn có chắc chắn muốn xóa tài khoản?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="confirmDeleteButton">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Đoạn mã JavaScript để xử lý sự kiện xóa -->
    <script>
        function XoaTK(ma) {
            var matk = parseInt(ma);

            // Hiển thị modal xác nhận xóa
            $('#confirmDeleteModal').modal('show');

            // Xử lý sự kiện khi người dùng xác nhận xóa
            $('#confirmDeleteButton').on('click', function () {
                $.ajax({
                    url: '/Admin/XoaTK',
                    data: {
                        matk: matk
                    },
                    type: 'POST',
                    dataType: 'json',
                    success: function (res) {
                        if (res.status == true) {
                            // Đóng modal sau khi xóa thành công
                            $('#confirmDeleteModal').modal('hide');
                            window.location = '@Url.Action("QuanLyTK", "Admin")';
                        }
                    }
                });
            });
        }
        $("#filterButton").click(function () {
            // Lấy các giá trị từ các phần tử trên trang
            const tenctk = $("input[name='tenctk']").val();
            const matk = $("input[name='matk']").val();
            const tendc = $("input[name='tendc']").val();
            const sdt = $("input[name='sdt']").val();
            const email = $("input[name='email']").val();
            const chvu = $("#ChucVu").val();

            // Sử dụng `window.location.href` để chuyển hướng đến URL
            const url = `@Url.Action("QuanLyTK", "Admin")?tenctk=${tenctk}&matk=${matk}&tendc=${tendc}&sdt=${sdt}&email=${email}&chvu=${chvu}`;
            window.location.href = url;
        });
    </script>

    <script>
        $(document).ready(function () {
            $('select[name="ChucVu"]').change(function () {
                var maTaiKhoan = parseInt($(this).closest('tr').find('td:first').text(), 10);
                var maChucVu = parseInt($(this).val(), 10);

                // Use AJAX to send the updated values to the controller
                $.ajax({
                    url: '@Url.Action("SuaCV", "Admin")',
                    type: 'POST',
                    data: { matk: maTaiKhoan, macv: maChucVu },
                    success: function () {
                        // Optionally, you can perform some action on success
                        console.log('ChucVu updated successfully');
                    },
                    error: function () {
                        console.log('Error updating ChucVu');
                    }
                });
            });
        });
    </script>
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>

    <script src="~/Admin/dist/js/adminlte.min.js"></script>


}


